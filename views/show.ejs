<% include partials/header %>

<div class="container" id="content">
	<h1 id="location"><%= city.toUpperCase() + ", " + country %></h1>
	<!-- bootstrap grid system -->
	<div class="row">
		<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12">
			<div id="map"></div>
		</div>
		
		<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12">
			<div class="row-lg-6">
				<!-- the color of the panel is determined by the temperature -->
				<% if (temp > 30) { -%>
					<div class="panel panel-danger">
				<% } else if (temp >= 20 && temp <= 30){ -%>
					<div class="panel panel-warning">
				<% } else{ -%>
					<div class="panel panel-info">
				<% } %>	
					<div class="panel-heading">
						<h2>Temperature<h2>
					</div>
					<div class="panel-body">
						<h1 id="temp"><%= temp %> Â°C</h1>
					</div>
				</div>
			</div>
			<div class="row-lg-6">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h2 class="text-center"><%= weather.description %></h2>
					</div>
					<div class="panel-body text-center">
						<% if (weather.icon.charAt(2) === 'd') { %>
							<!-- shwo the weather icon for day -->
							<img class="weatherIcon" src="./WeatherIcon/dayIcon/<%= weather.icon %>.png">
						<% } else { %>
							<!-- shwo the weather icon for night -->
							<img class="weatherIcon" src="./WeatherIcon/nightIcon/<%= weather.icon %>.png">
						<% } %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12">
			<div class="row-lg-6">
				<div class="panel panel-success">
					<div class="panel-heading">
						<h2>Sunrise</h2>
					</div>
					<div class="panel-body">
						<h1 class="text-center">
							<%= sunriseTime.hours %> : <%= sunriseTime.minutes %> : <%= sunriseTime.seconds %>		
						</h1>
					</div>
				</div>
			</div>
			<div class="row-lg-6">
				<div class="panel panel-danger">
					<div class="panel-heading">
						<h2>Sunset</h2>
					</div>
					<div class="panel-body">
						<h1 class="text-center"><%= sunsetTime.hours %> : <%= sunsetTime.minutes %> : <%= sunsetTime.seconds %></h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- the number of photos determines the mode of the background -->
<% if (url.length < 5) { %>
	<ul class="locationImage">
		<li style="background-image: url(<%= url %>)"></li>
	</ul>
<% } else { %>
	<ul class="slideshow">
		<% for (var i = 0; i < 5; i++) { %>
			<li style="background-image: url(<%= url[i] %>)"></li>
		<% } %>
	</ul>
<% } %>

<!-- Google map -->
<script>
  	function initMap() {
    	var center = {lat: <%= lat %>, lng: <%= lng %> };
    	var map = new google.maps.Map(document.getElementById('map'), {
    	    zoom: 8,
    	    center: center,
    	    scrollwheel: false
    	});
    	var contentString = `
      	<strong><%= country %><br />
      	<%= city %></strong>
    	`
    	var infowindow = new google.maps.InfoWindow({
      		content: contentString
    	});
    	var marker = new google.maps.Marker({
        	position: center,
        	map: map
    	});
    	marker.addListener('click', function() {
      	infowindow.open(map, marker);
   		});
  	}
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbJMuanL-wHgTe6kprTMxrmUTvbBZKnjQ&callback=initMap"></script>
<% include partials/footer %>